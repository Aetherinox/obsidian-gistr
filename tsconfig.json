{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "es6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "isolatedModules": false,
    "importHelpers": true,
    "outDir": "./dist/",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "scripthost",
      "es2015"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [".vscode"]
}
